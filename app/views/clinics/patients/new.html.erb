<!-- app/views/clinics/patients/new.html.erb -->
<h1>New Patient</h1>

<%= form_with(model: [@clinic, @patient], url: clinics_patients_path, local: true) do |form| %>
  <% if @patient.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@patient.errors.count, "error") %> prohibited this patient from being saved:</h2>
      <ul>
        <% @patient.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :medical_record_no %>
    <%= form.text_field :medical_record_no %>
  </div>

  <div class="field">
    <%= form.label :last_name %>
    <%= form.text_field :last_name %>
  </div>

  <div class="field">
    <%= form.label :first_name %>
    <%= form.text_field :first_name %>
  </div>

  <div class="field">
    <%= form.label :last_name_kana %>
    <%= form.text_field :last_name_kana %>
  </div>

  <div class="field">
    <%= form.label :first_name_kana %>
    <%= form.text_field :first_name_kana %>
  </div>

  <div class="field">
    <%= form.label :birth_date %>
    <%= form.date_select :birth_date %>
  </div>

  <div class="field">
    <%= form.label :gender %>
    <%= form.select :gender, ['male', 'female', 'other'] %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<%= link_to 'Back', clinics_patients_path %>
